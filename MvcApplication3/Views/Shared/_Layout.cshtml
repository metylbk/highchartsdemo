<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/bootswatch/3.0.0/flatly/bootstrap.min.css">
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script>
    @*<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>*@
    <script type="text/javascript" src="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="http://code.highcharts.com/highcharts.js"></script>
    <script src="http://code.highcharts.com/modules/exporting.js"></script>
</head>
<body>
    <div class="navbar navbar-fixed-top navbar-default" role="navigation">
        <div class="container-full">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand" style="padding-top:2px;padding-bottom:2px">
                    <img src="@Url.Content("~/Content/images/cisco.jpg")" height="56" alt="logo" /></a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li @if (@ViewContext.RouteData.GetRequiredString("action") == "Index")
                        { @Html.AttributeEncode("class=active");
                        }>
                        <a href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    <li class ="dropwdown @(ViewContext.RouteData.GetRequiredString("action") == "VolumePerLanguage" ? "active" : "")">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Statistics<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("VolumePerLanguage", "Home")">Volume Per Language</a></li>
                            <li><a href="#">Cost Per Language</a></li>
                            <li><a href="#">Volume Per Activity</a></li>
                            <li><a href="#">Cost Per Activity</a></li>
                            <li><a href="#">Project Duration</a></li>
                            <li><a href="#">Non-Translation Cost</a></li>
                            <li><a href="#">Waiting Quotes</a></li>
                        </ul>
                    </li>
                    <li @if (@ViewContext.RouteData.GetRequiredString("action") == "About")
                        { @Html.AttributeEncode("class=active");
                        }>
                        <a href="@Url.Action("About", "Home")">About</a>
                    </li>
                    <li>
                        <a href="#">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-full">
        @RenderBody()
    </div>
    <footer id="footer">
        <div class="container-full">
            <div class="pull-right">
                <p>&copy; @DateTime.Now.Year - Jonckers Inc</p>
            </div>
        </div>
    </footer>
</body>
</html>
